<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <!--<context-param>-->
        <!--<param-name>org.eclipse.jetty.servlet.jspPackagePrefix</param-name>-->
        <!--<param-value>com.academy.mobile.servlets</param-value>-->
    <!--</context-param>-->

    <servlet id="jsp">
        <servlet-name>uu</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>logVerbosityLevel</param-name>
            <param-value>DEBUG</param-value>
        </init-param>
        <init-param>
            <param-name>fork</param-name>
            <param-value>>false</param-value>
        </init-param>
        <init-param>
            <param-name>keepgenerated</param-name>
            <param-value>>true</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
        <!--<url-pattern>*.jspf</url-pattern>-->
        <!--<url-pattern>*.jspx</url-pattern>-->
        <!--<url-pattern>*.xsp</url-pattern>-->
        <!--<url-pattern>*.JSP</url-pattern>-->
        <!--<url-pattern>*.JSPF</url-pattern>-->
        <!--<url-pattern>*.JSPX</url-pattern>-->
        <!--<url-pattern>*.XSP</url-pattern>-->
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>homePage</servlet-name>
        <servlet-class>com.academy.mobile.servlets.SubscriberListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homePage</servlet-name>
        <url-pattern>/subscribers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SubscriberAdd</servlet-name>
        <servlet-class>com.academy.mobile.servlets.SubscriberAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubscriberAdd</servlet-name>
        <url-pattern>/subscriber/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SubscriberDelete</servlet-name>
        <servlet-class>com.academy.mobile.servlets.SubscriberDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubscriberDelete</servlet-name>
        <url-pattern>/subscriber/del</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SubscriberEdit</servlet-name>
        <servlet-class>com.academy.mobile.servlets.SubscriberEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubscriberEdit</servlet-name>
        <url-pattern>/subscriber/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JerseyServletXML</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>com.academy.mobile.rest.xml</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
            <param-value>com.academy.mobile.rest.CharsetResponseFilter</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>JerseyServletXML</servlet-name>
        <url-pattern>/rest/xml/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JerseyServletJSON</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>com.academy.mobile.rest.json</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
            <param-value>com.academy.mobile.rest.CharsetResponseFilter</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>JerseyServletJSON</servlet-name>
        <url-pattern>/rest/json/*</url-pattern>
    </servlet-mapping>

</web-app>